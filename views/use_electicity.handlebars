<h3>The Usage Of Electricity Appliances</h3>

{{#each appliance}}
<li>{{name}}</li>
{{/each}}

<h1>Balance: {{meters_id.balance}}</h1>

<form action="/meters/use/{{meters_id.id}}" method="post">

<select name="used_appliance" id="">
    <option value=""> <p>--Select an Appliance--</p> </option>
    {{#each appliance}}
    <option value="{{rate}}"> {{rate}}  {{name}}</option>
    {{/each}}
</select>

<input type="submit" value="Use Appliance">


</form>